{
  "name": "neuralagent-desktop",
  "version": "1.7.1",
  "description": "NeuralAgent Electron Desktop Application",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:6763 && npx electron .\"",
    "react-start": "cd neuralagent-app && npm start",
    "react-build": "cd neuralagent-app && npm run build",
    "build:agent": "\"aiagent\\venv\\Scripts\\pyinstaller\" --clean --noconfirm --onefile --name agent --distpath agent_build/ aiagent/main.py",
    "build:agent:mac": "./aiagent/venv/bin/pyinstaller --clean --noconfirm --onefile --name agent --distpath agent_build/ aiagent/main.py",
    "build:agent:mac:x64": "arch -x86_64 ./aiagent/venv_x64/bin/pyinstaller --clean --noconfirm --onefile --name agent --distpath agent_build_x64/ aiagent/main.py",
    "build": "npm run react-build && electron-builder",
    "dev": "electron ."
  },
  "build": {
    "appId": "com.getneuralagent.desktop",
    "productName": "NeuralAgent",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "electron/**/*",
      "neuralagent-app/build/**/*"
    ],
    "extraResources": [
      {
        "from": "agent_build/agent",
        "to": "agent"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ],
      "icon": "assets/assets/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "notarize": true
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "concurrently": "^9.1.2",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "express": "^5.1.0",
    "sudo-prompt": "^9.2.1",
    "tree-kill": "^1.2.2",
    "uuid": "^11.1.0"
  }
}
